<div class="container">
    <div class="row">
        <div class="text-center" style="margin-bottom:10px;margin-top:10px">
            @ViewBag.Message
        </div>
        <h4 class="text-center">@ViewBag.Title</h4>
        <div class="row">
            <hr>
            @foreach (var item in Model)
            {
                <div class="panel panel-default">
                    <div class="panel-body">
                        @item.Title
                        <br>
                        @item.Description
                    </div>
                    <div class="panel-footer">
                        @Html.ActionLink("Responder", "addAnswer", "Answer", new { pid = @item.Id }, null)
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/session-validations.js"></script>
}
